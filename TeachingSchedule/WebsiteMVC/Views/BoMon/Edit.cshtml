@model WebsiteMVC.Models.BoMon

@{
    ViewBag.Title = "Bộ môn";
    Layout = "~/Views/Shared/_LayoutAmin.cshtml";
}

<div class="panel panel-default">
    <div class="panel-body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaBoMon)
                @Html.HiddenFor(q => q.Active)

                <div class="form-group">
                    @Html.LabelFor(model => model.TenBoMon,"Tên bộ môn", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenBoMon, new { htmlAttributes = new { @class = "form-control", required = "true" } })
                        @Html.ValidationMessageFor(model => model.TenBoMon, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn green" />
                        <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-list"></i> DANH SÁCH BỘ MÔN</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
