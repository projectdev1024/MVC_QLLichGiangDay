@model WebsiteMVC.Models.DNDoiGV

@{
    ViewBag.Title = "ĐƠN ĐỀ NGHỊ ĐỔI GIÁO VIÊN";
    Layout = "~/Views/Shared/_LayoutAmin.cshtml";
}


<div class="panel panel-default">
    <div class="panel-body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaDN)
                @Html.HiddenFor(model => model.Status)
                @Html.HiddenFor(model => model.NgayTao)
                @Html.HiddenFor(model => model.MaPCGD)

                <div class="form-group">
                    @Html.Label("Giáo viên mới", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.MaGV, ViewBag.MaGVs as SelectList, "Vui lòng chọn",  new { @class = "form-control", required = "true" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Ngày bắt đầu", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NgayBD, new { htmlAttributes = new { @class = "form-control", required = "true", type = "date", Value = Model.NgayBD?.ToString("yyyy-MM-dd") } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Ngày kết thúc", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NgayKT, new { htmlAttributes = new { @class = "form-control", required = "true", type = "date", Value = Model.NgayKT?.ToString("yyyy-MM-dd") } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn green" />
                        <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-list"></i> DANH SÁCH ĐƠN ĐỀ NGHỊ</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

