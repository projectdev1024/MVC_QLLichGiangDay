@model WebsiteMVC.Models.PCGD

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAmin.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading"></div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaPCGD)
                @Html.HiddenFor(model => model.Status)
                @Html.HiddenFor(model => model.MaHP)

                <div class="form-group">
                    @Html.LabelFor(model => model.MaGV, "Giáo viên chính", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(q => q.MaGV, ViewBag.MaGVs as SelectList, "Vui lòng chọn", htmlAttributes: new { @class = "form-control", required = "true" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MaGV2, "Giáo viên 2", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(q => q.MaGV2, ViewBag.MaGVs as SelectList, "Không bắt buộc", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MaGV3, "Giáo viên 3", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(q => q.MaGV3, ViewBag.MaGVs as SelectList, "Không bắt buộc", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn green" />
                        <a href="@Url.Action("Index","LopHP")" class="btn btn-default"><i class="fa fa-list"></i> DANH SÁCH LỚP HỌC PHẦN</a>
                    </div>
                </div>

            </div>
        }

    </div>
</div>

